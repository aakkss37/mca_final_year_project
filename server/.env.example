# JWT secrets and token settings
JWT_SECRET=your_jwt_secret_key
JWT_ACCESS_TOKEN_LENGTH=15m
JWT_REFRESH_TOKEN_LENGTH=7d

# Cookie settings
COOKIE_REFRESH_TOKEN_NAME=refreshToken
COOKIE_REFRESH_TOKEN_AGE=604800000  # 7 days in milliseconds

# Database connection
DB_CONNECTION_URL=postgres://username:password@host:port/database

# CORS and client URLs
CLIENT_PROD_URL=https://your-production-client-url.com

# Node environment
NODE_ENV=development

# OpenAI API Key for AI Chatbot
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here